
set(CMAKE_SYSTEM_NAME Generic)
set(CMAKE_SYSTEM_PROCESSOR arm)

set(CMAKE_ASM_COMPILER arm-none-eabi-gcc)
set(CMAKE_C_COMPILER   arm-none-eabi-gcc)
set(CMAKE_CXX_COMPILER arm-none-eabi-g++)

set(_LD_TEMPLATE_PREFIX "<FLAGS> <OBJECTS> -o <TARGET>")
set(_LD_TEMPLATE_SUFFIX "-nostdlib -nostartfiles <LINK_FLAGS> <LINK_LIBRARIES>")

set(CMAKE_C_LINK_EXECUTABLE   "<CMAKE_C_COMPILER> ${_LD_TEMPLATE_PREFIX} <CMAKE_C_LINK_FLAGS> ${_LD_TEMPLATE_SUFFIX}")
set(CMAKE_CXX_LINK_EXECUTABLE "<CMAKE_CXX_COMPILER> ${_LD_TEMPLATE_PREFIX} <CMAKE_CXX_LINK_FLAGS> ${_LD_TEMPLATE_SUFFIX}")

